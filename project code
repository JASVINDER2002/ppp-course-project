	void america()
	{
	Scanner sc = new Scanner(System.in);
	double americandollar = 82.25;
	int indiancurrency;
	System.out.println("\nWELCOME TO AMERICA !");
	System.out.println("\nPURPOSE OF COMING TO AMERICA \n 1.student \n 2.employeement");
	//while(true)
	//{
		int na = sc.nextInt();
		switch (na)
		{
		case 1:
			System.out.println("\n As a student you need to earn a minimum of $1500 - $2000 for livelihood");
			System.out.println("\nAs a student how much money do you spend in india:-");
			indiancurrency = sc.nextInt();
			System.out.println("\nEntre the no.of factors that you mainly considered:- ");
			int f = sc.nextInt();
			double stusupply;
			stusupply = (indiancurrency/americandollar)*f;
			System.out.println(stusupply);
			System.out.println("\nit is the amount as a student you require:-"+stusupply);
			break;
		case 2:
			//double americandollar = 82.25;
			System.out.println("\nHOW MUCH MONEY DO YOU MAKE IN INDIA :-");
			indiancurrency = sc.nextInt();
			double supply;
			supply = (indiancurrency/americandollar)*4;
			System.out.println(supply);
			if (supply<2000)
			{
				System.out.println("difficult to survive need to spend less and save more !");
			}
			else if (supply>2000 & supply<7500)
			{
				System.out.println("GOOD AMOUNT CAN SURVIVE AND MAKE A LITTLE SAVING SOMETIMES SACRIFICES MAY BE NEEDED !");
			}
			else
			{
				System.out.println("GOOD AMOUNT CAN SURVIVE AND MAKE A LOT SAVINGS PLAN TO BUY ASSETS AND LEAD A HAPPY LIFE WITHOUT ANY SACRIFICES !");	
			}
			break;
		case 3:
			System.exit(0);
		}
	//}
	
	
	}
	void australia()
	{    //AUSTRALIAN DOLLAR = 51.6
		//System.out.println("\nhello australia");
		Scanner sc = new Scanner(System.in);
		System.out.println("\nHELLO AUSTRALIA ");
		//System.out.println("\nWHY ARE YOU COMING TO AUSTRALIA :- ");
		//int na = sc.nextInt();
		double australiandollar = 51.61;
		int indiancurrency; //= sc.nextInt();
		//double stusupply1;
		//stusupply1 = (indiancurrency/australiandollar)*4;
		//System.out.println(stusupply1);
		System.out.println("\nPURPOSE OF COMING TO AUSTRALIA \n 1.student \n 2.employeement");
		int na = sc.nextInt();
		switch (na)
		{
		case 1:
			System.out.println("\n As a student you need to earn a minimum of $850 - $1500 for livelihood");
			System.out.println("\nAs a student how much money do you spend in india:-");
			indiancurrency = sc.nextInt();
			System.out.println("\nEntre the no.of factors that you mainly considered:- ");
			int f = sc.nextInt();
			double stusupply1;
			stusupply1 = (indiancurrency/australiandollar)*f;
			System.out.println(stusupply1);
			System.out.println("\nit is the amount as a student you require:-"+stusupply1);
			break;
	    case 2:
		
		System.out.println("\nHOW MUCH MONEY DO YOU MAKE IN INDIA :-");
		indiancurrency = sc.nextInt();
		double empsupply;
		empsupply = (indiancurrency/australiandollar)*4;
		System.out.println("YOUR MONTHLY INCOME SHOULD BE:-"+empsupply);
	
		if (empsupply<2500)
		{
			System.out.println("difficult to survive need to spend less and save more !");
		}
		else if (empsupply>3000 & empsupply<6000)
		{
			System.out.println("GOOD AMOUNT CAN SURVIVE AND MAKE A LITTLE SAVING SOMETIMES SACRIFICES MAY BE NEEDED !");
		}
		else
		{
			System.out.println("GOOD AMOUNT CAN SURVIVE AND MAKE A LOT SAVINGS PLAN TO BUY ASSETS AND LEAD A HAPPY LIFE WITHOUT ANY SACRIFICES !");	
		}
		break;
	case 3:
		System.exit(0);
	}
	}
