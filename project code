	void southkorea()
	{
		try 
		{
		System.out.println("\nHELLO SOUTH KOREA");
		Scanner sc = new Scanner(System.in);
		//System.out.println("\nWHY ARE YOU COMING TO UK :- ");
		//int na = sc.nextInt();
		System.out.println("\nHOW MUCH MONEY DO YOU MAKE IN INDIA :-");
		double skmoney = 0.16;
		int indiancurrency = sc.nextInt();
		double sksupply;
		sksupply = (indiancurrency/skmoney)*4;
		System.out.println(sksupply);
		throw new currencyvaluelessException();
		}
		catch (currencyvaluelessException cvx)
		{
			cvx.print();
		}
	
	}
	//break;
