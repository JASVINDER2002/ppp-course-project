	void germany()
	{
		System.out.println("\nHELLO GERMANY");
		Scanner sc = new Scanner(System.in);
		System.out.println("\nWHY ARE YOU COMING TO GERMANY :- ");
		//int na = sc.nextInt();
		double GMONEY= 41.4;
		int indiancurrency ;//= sc.nextInt();
		//double supply;
		//supply = (indiancurrency/canadiandollar)*4;
		//System.out.println(supply);
		System.out.println("\nPURPOSE OF COMING TO GERMANY \n 1.student \n 2.employeement");
