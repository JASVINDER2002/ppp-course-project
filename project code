import java.util.*;

class currencyvaluelessException extends Exception
{
	void print()
	{
		System.out.print("Invalid Calculation\n As the value of the currency of the india is more than the destiny country \nit is only gor plan vactions etc;\n");
	}

}
class Countrys extends Exception
{
	/*
