public class pppMain {
    
	//int n;
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		Countrys c = new Countrys();
		
     while(true)
     {
    	 System.out.println("\nSELECT THE COUNTRY FROM BELOW:-");
    	 System.out.println("\n1.AMERICA\n2.AUSTRALIA\n3.CANADA\n4.UNITED KINGDOM\n5.SOUTHKOREA\n6.SAUDI ARABIA\n7.GERMANY\n8.SPAIN\n9.SINGAPORE(IT IS A GOOD PLACE TO WORK FOR CS DEPARTMENT PEOPLE !)\n10.VIETNAM\nENTER YOUR OPTION NO:-");
    	int n = sc.nextInt();
    	 switch (n)
    	 {
    	 case 1:
    		c.america();
    		 //System.out.println("hello america");	

    		 
    		 break;
    	 case 2:
    		 c.australia();
    		// System.out.println("hello australia");	
    		 break;
    	 case 3:
    		 c.canada();
    		 //System.out.println("hello canada");	
    		 break;
    	 case 4:
    		 c.unitedkingdom();
    		 break;
    	 case 5:
    		 c.southkorea();
    		 break;
    	 case 6:
    		 c.saudiarabia();
    		 break;
    	 case 7:
    		 c.germany();
    	 	 break;
    	 case 8:
    		 c.spain();
    		 break;
    	 case 9:
    		 c.singapore();
    		 break;
    	 case 10:
    		 c.vietnam();
    		 break;
    	 }
     }
	}

}
