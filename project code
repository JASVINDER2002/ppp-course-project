			System.out.println("\nEntre the no.of factors that you mainly considered:- ");
			int f = sc.nextInt();
			double Gstusupply;
			Gstusupply = (indiancurrency/GMONEY)*f;
			System.out.println(Gstusupply);
			System.out.println("\nit is the amount as a student you require:-"+Gstusupply);
			break;
	    case 2:
		
		System.out.println("\nHOW MUCH MONEY DO YOU MAKE IN INDIA :-");
		indiancurrency = sc.nextInt();
		double Gempsupply;
		Gempsupply = (indiancurrency/GMONEY)*4;
